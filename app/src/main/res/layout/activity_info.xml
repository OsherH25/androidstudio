<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/appbackground"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="242dp"
            android:layout_height="78dp"
            android:gravity="center"
            android:text="כאן ריכזנו עבורכם מידע שימושי בנושאים שונים הקשורים לבית אבות "
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.556"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079" />


        <TextView
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text=" אילו סוגי בתי אבות קיימים?"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.201" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="374dp"
            android:layout_height="236dp"
            android:text="ישנם בישראל מספר סוגים של בתי אבות, הנבדלים זה מזה במאפייני האוכלוסייה המתגוררת בהם ובצורכיה.בעת קבלת ההחלטה על מעבר לבית אבות, ייקבע סוג המעון המתאים על פי הגדרת התפקוד של הדייר המיועד.הגדרות התפקוד מחולקות ל-4 קבוצות:בתי אבות לאזרחים ותיקים עצמאיים או תשושים.בתי אבות לאזרחים ותיקים סיעודיים.
בתי אבות לאזרחים ותיקים תשושי נפש.
בתי אבות לאזרחים ותיקים סיעודיים מורכבים "
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.353" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="374dp"
            android:layout_height="236dp"
            android:text="סוג בית האבות המתאים ייקבע על פי הגדרת התפקוד של הדייר המיועד.

הגדרת התפקוד של אזרח ותיק המיועד למגורים בבית אבות נקבעת על פי בדיקה הנערכת בקופת החולים.
במהלך הבדיקה תמלא האחות דוח תפקודי המשקף את רמת תפקודו של האזרח הוותיק המעוניין להיכנס לבית אבות, וכך יקבע הסטטוס התפקודי.

במקרים שבהם רמת התפקוד לא ברורה, יש לפנות לרופא הגריאטרי המחוזי של משרד הבריאות לקביעת הסטטוס התפקודי."
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.777" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="242dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="כיצד נקבע סוג בית אבות לדייר המיועד?"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.495" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        app:itemBackground="@color/def"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:itemIconSize="40dp"
        app:menu="@menu/menu_bar" />


</RelativeLayout>
